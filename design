loop
{
	prompt
	get_next_line
	parser (0 pour tout va bien, 1 pour une ou plusieurs erreurs, -1 pour un abort)
}

parser
{
	strsplit les ;
	parcourir toutes les sous chaines
	{
		parse_cmd(0 pour tout va bien, 1 pour une ou plusieurs erreurs, -1 pour un abort)
	}
}

parse_cmd
{
	strsplit les ' '
	parcourir toutes les sous chaines
	{
		builtins(0 pour les non_builts_ins, 1 pour un builtin, 2 pour une erreur, -1 pour un abort)
		exec_binary(0 pour tout va bien, 1 pour une erreur, 2 pour cmd not found, -1 pour un abort)
	}
}
